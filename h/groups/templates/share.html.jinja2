{% extends "h:templates/layouts/base.html.jinja2" %}

{% block page_title %}{{ group.name }}{% endblock page_title %}

{% block styles %}
  {% assets "site_css" %}
    <link rel="stylesheet" href="{{ ASSET_URL }}">
  {% endassets %}
{% endblock %}

{% block content %}
  <div class="content content--narrow">
    <div class="group-form is-member-of-group">
      <img class="group-form__invite-icon" src="/assets/images/icons/group-invite.svg">
      <div class="group-form__name-label">
        Success! Invite others to annotate with the group
      </div>
      <div class="group-form__name-input">
        {{ group.name }}
      </div>
      <!-- TODO - Potentially extract this out into a separate template !-->
      <div class="share-link-form">
        <input class="share-link-field js-share-link" value="{{ group_url }}">
        <p class="share-link-icons">
          <a href="//twitter.com/intent/tweet?url={{ group_url }}"
             target="_blank"
             title="Tweet link"
             class="share-link-icon h-icon-twitter"></a>
          <a href="//www.facebook.com/sharer/sharer.php?u={{ group_url }}"
             target="_blank"
             title="Share on Facebook"
             class="share-link-icon h-icon-facebook"></a>
          <a href="//plus.google.com/share?url={{ group_url }}"
             target="_blank"
             title="Post on Google Plus"
             class="share-link-icon h-icon-google-plus"></a>
          <a href="mailto:?subject=Invite to join the annotation group {{group.name}}&amp;body={{ group_url }}"
             title="Share via email"
             class="share-link-icon h-icon-mail"></a>
        </p>
      </div>
    </div>
  </div>
{% endblock content %}

{% block scripts %}
{% assets "site_js" %}
  <script src="{{ ASSET_URL }}"></script>
{% endassets %}
{% endblock scripts %}
