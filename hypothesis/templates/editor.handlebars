<ul class="annotator-listing">
  <li class="hyp-widget hyp-writer">
    <div class="hyp-innerwrap">
      <div class="hyp-writer">
        <div class="hyp-nothread">
          <div class="hyp-meta">
            {{#splitUser user}}
              <div class="hyp-user">
                {{name}}
              </div>
            {{/splitUser}}
            <div class="hyp-time">
              posting now - 0 replies
            </div>
            <div class="hyp-body">
              <textarea class="hyp-content" placeholder="Thoughts..."
                        value="{{text}}">
              </textarea>
            </div>
            <div class="hyp-bottombar">
              <div class="hyp-right">
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </li>
</ul>